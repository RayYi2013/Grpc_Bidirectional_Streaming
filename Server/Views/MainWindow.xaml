<ui:FluentWindow x:Class="Server.Views.MainWindow"
                 MouseDown="Window_MouseDown"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:vm="clr-namespace:Server.ViewModels"
                 Title="Server"
                 Width="600"
                 Height="700"
                 WindowStartupLocation="CenterScreen"
                 WindowStyle="SingleBorderWindow"
                 ResizeMode="CanResize"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="None">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

<ui:TitleBar x:Name="AppTitleBar"
                 Title="gRPC Server for Bidirectional Streaming"
                 Grid.Row="0"
                 Margin="0,0,0,16"/>

        <!-- Server Control Section -->
        <ui:Card Grid.Row="1" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ui:Button Grid.Column="0"
                           Content="{Binding ServerButtonText}"
                           Command="{Binding ToggleServerCommand}"
                           Appearance="Primary"
                           MinWidth="120"
                           Margin="0,0,15,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ServerStatus}" 
                               FontWeight="SemiBold"
                               Foreground="{Binding StatusColor}"/>
                    <TextBlock FontSize="11" 
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                        <Run Text="Connected clients:"/>
                        <Run Text="{Binding ConnectedClientsCount}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <ui:SymbolIcon Grid.Column="2"
                               Symbol="{Binding StatusIcon}" 
                               FontSize="32" 
                               Foreground="{Binding StatusColor}"/>
            </Grid>
        </ui:Card>

        <!-- Server Address Info -->
        <ui:Card Grid.Row="2" Margin="0,0,0,15" Padding="15">
            <StackPanel>
                <TextBlock Text="Server Address" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <TextBlock Text="http://localhost:5001" 
                           FontFamily="Consolas"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </ui:Card>

        <!-- Messages Section -->
        <ui:Card Grid.Row="3" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Messages" 
                           FontWeight="SemiBold" 
                           Margin="15,15,15,10"/>

                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Padding="15,0,15,15">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" 
                                        Margin="0,0,0,8"
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        CornerRadius="8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{Binding SenderColor}">
                                            <Run Text="["/><Run Text="{Binding Sender}"/><Run Text="]"/>
                                            <Run Text=" " FontWeight="Normal" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                                <Run Text="{Binding FormattedTimestamp, Mode=OneWay}" 
                                                 FontSize="11" 
                                                 FontWeight="Normal"
                                                 Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                        </TextBlock>

                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding Content}" 
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </ui:Card>

        <!-- Broadcast Section -->
        <ui:Card Grid.Row="4" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ui:TextBox Grid.Column="0"
                            Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="Type broadcast message..."
                            Margin="0,0,10,0"
                            IsEnabled="{Binding IsServerRunning}">
                    <ui:TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding BroadcastMessageCommand}"/>
                    </ui:TextBox.InputBindings>
                </ui:TextBox>

                <ui:Button Grid.Column="1"
                           Content="Broadcast"
                           Command="{Binding BroadcastMessageCommand}"
                           Appearance="Primary"
                           Icon="{ui:SymbolIcon Send24}"
                           MinWidth="120"/>
            </Grid>
        </ui:Card>
    </Grid>
</ui:FluentWindow>
